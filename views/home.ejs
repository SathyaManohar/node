<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Homepage</title>
    <style>
        .container {
            display: flex;
            flex-wrap: wrap; /* Allows wrapping to the next row if necessary */
            gap: 1rem; /* Adds spacing between cards */
            justify-content: space-between; /* Adjusts spacing between cards */
        }
        .card {
            flex: 1 1 calc(33.333% - 1rem); /* Makes each card take ~1/3 of the row */
            max-width: calc(33.333% - 1rem); /* Prevents cards from growing too wide */
        }
        .card img {
           
            object-fit: cover; /* Keeps image aspect ratio intact */
        }
    </style>
</head>
<body>
    
    <%- include('./partials/nav') %>
    <div class="container mt-3">
        <% blogs.forEach(blog => { %>
            <div class="card">
                <img src="<%= blog.coverimageurl %>" class="card-img-top" alt="...">
                <div class="card-body">
                  <h5 class="card-title"><%= blog.title %></h5>
               
                  <a href="/blog/<%= blog._id %>" class="btn btn-primary">View</a>

                </div>
            </div>
        <% }) %>
    </div>
   
   <%- include('./partials/scripts') %>
</body>
</html>
